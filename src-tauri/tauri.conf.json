{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fapptap-ui",
  "version": "0.1.0",
  "identifier": "com.pornaid.fapptap",
  "build": {
    "beforeDevCommand": "npm run dev -- --port=1422 --strictPort",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      { "title": "fapptap-ui", "width": 1280, "height": 800, "resizable": true }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost ws:; img-src 'self' asset: http://asset.localhost blob: data:; media-src 'self' asset: http://asset.localhost blob: data:; connect-src 'self' http://localhost:1422 ws://localhost:1422 ipc:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'",
      "assetProtocol": {
        "scope": [
          "$HOME/Dropbox/**/*",
          "$HOME/**/*",
          "C:/**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/worker",
      "binaries/ffmpegbin",
      "binaries/ffprobebin"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
