{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "fapptap-ui",
  "version": "0.1.0",
  "identifier": "com.pornaid.fapptap",
  "build": {
    "beforeDevCommand": "npm run dev -- --port=1422 --strictPort",
    "devUrl": "http://localhost:1422",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      { "title": "fapptap-ui", "width": 1280, "height": 800, "resizable": true }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "$HOME/Dropbox/**/*",
          "$HOME/**/*",
          "C:/**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/worker",
      "binaries/ffmpeg",
      "binaries/ffprobe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
