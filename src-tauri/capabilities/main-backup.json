{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main",
  "description": "Main window capabilities (sidecars, fs, dialog, store)",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "shell:allow-open",
    {
      "identifier": "fs:read-all",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$APPLOCAL/**" },
        { "path": "$RESOURCE/**" },
        { "path": "$HOME/**" }
      ]
    },
    {
      "identifier": "fs:write-all",
      "allow": [{ "path": "$APPDATA/**" }, { "path": "$APPLOCAL/**" }]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "worker", "sidecar": true },
        { "name": "ffmpeg", "sidecar": true },
        { "name": "ffprobe", "sidecar": true }
      ]
    }
  ]
}
