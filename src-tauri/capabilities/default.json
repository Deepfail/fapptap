{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",

    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME",
        "$HOME/**/*",
        "$DESKTOP",
        "$DESKTOP/**/*",
        "$DOCUMENT",
        "$DOCUMENT/**/*",
        "$DOWNLOAD",
        "$DOWNLOAD/**/*",
        "$VIDEO",
        "$VIDEO/**/*",
        "$PICTURE",
        "$PICTURE/**/*",
        "$APPDATA/**/*",
        "$TEMP/**/*",
        "C:/Users/Virta/Dropbox",
        "C:/Users/Virta/Dropbox/**/*",
        "C:/**/*"
      ]
    },

    "store:default",
    "store:allow-load",
    "store:allow-save",
    "store:allow-set",
    "store:allow-get",
    "store:allow-values",
    "store:allow-entries",

    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "binaries/worker", "sidecar": true, "args": true },
        { "name": "binaries/ffmpegbin", "sidecar": true, "args": true },
        { "name": "binaries/ffprobebin", "sidecar": true, "args": true },
        { "name": "binaries/ffplaybin", "sidecar": true, "args": true }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "binaries/worker", "sidecar": true, "args": true },
        { "name": "binaries/ffmpegbin", "sidecar": true, "args": true },
        { "name": "binaries/ffprobebin", "sidecar": true, "args": true },
        { "name": "binaries/ffplaybin", "sidecar": true, "args": true }
      ]
    }
  ]
}
