{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",

    
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$HOME" }, { "path": "$HOME/**/*" },
        { "path": "$DESKTOP" }, { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT" }, { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD" }, { "path": "$DOWNLOAD/**/*" },
        { "path": "$VIDEO" }, { "path": "$VIDEO/**/*" },
        { "path": "$PICTURE" }, { "path": "$PICTURE/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        { "path": "$HOME/*" }, { "path": "$HOME/**/*" },
        { "path": "$DESKTOP/*" }, { "path": "$DESKTOP/**/*" },
        { "path": "$DOCUMENT/*" }, { "path": "$DOCUMENT/**/*" },
        { "path": "$DOWNLOAD/*" }, { "path": "$DOWNLOAD/**/*" },
        { "path": "$VIDEO/*" }, { "path": "$VIDEO/**/*" },
        { "path": "$PICTURE/*" }, { "path": "$PICTURE/**/*" }
      ]
    },

    
    "store:default",
    "store:allow-load",
    "store:allow-save",
    "store:allow-set",
    "store:allow-get",
    "store:allow-values",
    "store:allow-entries",

    
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "binaries/worker", "sidecar": true, "args": true },
        { "name": "binaries/ffmpeg", "sidecar": true, "args": true },
        { "name": "binaries/ffprobe", "sidecar": true, "args": true }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "binaries/worker", "sidecar": true, "args": true },
        { "name": "binaries/ffmpeg", "sidecar": true, "args": true },
        { "name": "binaries/ffprobe", "sidecar": true, "args": true }
      ]
    }
  ]
}
