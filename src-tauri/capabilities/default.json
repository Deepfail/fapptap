{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default", 
    "dialog:allow-open",
    "dialog:default",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:default",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:default",
    "shell:allow-run-python-worker",
    "shell:allow-run-ffmpeg",
    "shell:allow-run-ffprobe"
  ]
}
