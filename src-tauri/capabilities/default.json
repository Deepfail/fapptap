{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
  "fs:default",
    "fs:allow-home-read-recursive",
    "fs:allow-download-read-recursive",
    "fs:allow-document-read-recursive",
    "fs:allow-desktop-read-recursive",
    "fs:allow-picture-read-recursive",
    "fs:allow-video-read-recursive",
    
    "store:default",
    "store:allow-load",
    "store:allow-save",
    "store:allow-set",
    "store:allow-get",
    "store:allow-values",
    "store:allow-entries",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/worker",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/ffprobe",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "binaries/worker",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/ffprobe",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
